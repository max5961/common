bindsym $mod+w exec --no-startup-id rofi -show window
bindsym $mod+p exec --no-startup-id ~/.config/rofi/scripts/powermenu.sh

# mpd
bindsym $mod+Shift+p exec --no-startup-id mpc toggle
mode "mpd" {
    bindsym l exec --no-startup-id mpc next
    bindsym h exec --no-startup-id mpc prev
    bindsym p exec --no-startup-id mpc toggle
    bindsym f exec --no-startup-id mpc seek +00:00:01
    bindsym b exec --no-startup-id mpc seek -00:00:01

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
    bindsym m mode "default"
}
bindsym $mod+m mode "mpd"


