bindsym $mod+ plus exec --no-startup-id ~/.config/i3/scripts/handle-alacritty-opacity.sh -i

# browser
bindsym $mod+i exec --no-startup-id open-browser
bindsym $mod+b exec --no-startup-id open-browser

# rofi
