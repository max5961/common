window:
  padding:
    x: 10
    y: 10

  class:
    instance: Alacritty
    general: Alacritty

  startup_mode: maximized
  decorations: none
  opacity: 0.93

scrolling:
  history: 1000
  multiplier: 3
font:
  normal:
    family: "MesloLGS NF"
  size: 12.5

draw_bold_text_with_bright_colors: true

shell:
  program: /usr/bin/zsh

# color-scheme
# can also run the command alacritty-themes
# alacritty-themes is installed globally from npm and contains themes in .yml files
# alacritty-themes will >> themes to alacritty.yml
import:
  - ~/.config/alacritty/dist/themes/rose-pine.yml
colors:
  name: s3r0 modified
  author: earsplit
  primary:
    background: "#1F1F1F"
    foreground: "#C0B18B"
  cursor:
    text: "#1F1F1F"
    cursor: "#C0B18B"
  normal:
    black: "#4A3637"
    red: "#D17B49"
    green: "#7B8748"
    yellow: "#AF865A"
    blue: "#535C5C"
    magenta: "#775759"
    cyan: "#6D715E"
    white: "#C0B18B"
  bright:
    black: "#4A3637"
    red: "#D17B49"
    green: "#7B8748"
    yellow: "#AF865A"
    blue: "#535C5C"
    magenta: "#775759"
    cyan: "#6D715E"
    white: "#C0B18B"
theme: S3r0-modified
